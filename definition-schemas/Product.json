{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Product",
    "definitions": {"Product": {
        "type": "object",
        "properties": {
            "manufacturer": {
                "type": "array",
                "title": "Manufacturers",
                "uniqueItems": true,
                "items": {
                    "type": "string",
                    "title": "Manufacturer",
                    "cordra": {"type": {"handleReference": {"types": [
                        "User",
                        "Person",
                        "Organization"
                    ]}}}
                }
            },
            "brand": {"type": "string"},
            "model": {"type": "string"},
            "productID": {"type": "string"},
            "productionDate": {"type": "string"},
            "purchaseDate": {"type": "string"},
            "serialNumber": {"type": "string"}
        }
    }}
}