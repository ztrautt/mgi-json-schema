{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "MaterialProcess",
    "description": "This schema describes an observation of a material's structure.",
    "required": [
        "@id",
        "@context",
        "@type",
        "requires"
    ],
    "definitions": {
        "QuantitativeValue": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "default": "QuantitativeValue"
                },
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "value": {
                    "title": "Value",
                    "type": "number"
                },
                "unitText": {
                    "title": "Unit Text",
                    "type": "string"
                },
                "unitCode": {
                    "title": "Unit Code",
                    "type": "string",
                    "cordra": {
                        "type": {
                            "handleReference": {
                                "types": [
                                    "UnitOfMeasurement"
                                ]
                            }
                        }
                    }
                }
            }
        },
        "DescriptiveValue": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "default": "QuantitativeValue"
                },
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "unitText": {
                    "title": "Unit Text",
                    "type": "string"
                },
                "unitCode": {
                    "title": "Unit Code",
                    "type": "string",
                    "cordra": {
                        "type": {
                            "handleReference": {
                                "types": [
                                    "UnitOfMeasurement"
                                ]
                            }
                        }
                    }
                }
            }
        },
        "measurementTechnique": {
            "type": "array",
            "title": "Synthesis/Measurement Techniques",
            "uniqueItems": true,
            "items": [
                {
                    "type": "string",
                    "title": "Synthesis/Measurement Technique Name",
                },
                {
                    "type": "string",
                    "title": "Technique Category"
                },
                {
                    "type": "string",
                    "title": "Technique Subcategory"
                }
            ]
        }
    },
    "properties": {
        "@context": {
            "type": "array",
            "default": [
                "http://schema.org/",
                {
                    "mat": "https://pages.nist.gov/material-schema/",
                    "measurementTechnique": "mat:measurementTechnique",
                    "parameterControlled": "mat:parameterControlled",
                    "variableMeasured": "mat:variableMeasured"
                }
            ]
        },
        "@type": {
            "type": "array",
            "default": [
                "mat:Structure"
            ]
        },
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "keywords": {
            "type": "array",
            "title": "Keywords",
            "description": "This is for user-defined terms.",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Keyword"
            }
        },
        "citation": {
            "type": "array",
            "title": "Citations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Citation",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Citation",
                                "User",
                                "Person",
                                "Organization",
                                "Comment",
                                "Dataset",
                                "File",
                                "MaterialProperty",
                                "TabularDataPackage"
                            ]
                        }
                    }
                }
            }
        },
        "creator": {
            "type": "array",
            "title": "Creators",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Creator",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "User",
                                "Person",
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "contributor": {
            "type": "array",
            "title": "Contributors",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Contributor",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "User",
                                "Person",
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "license": {
            "type": "string",
            "title": "License"
        },
        "dateCreated": {
            "title": "Date Created",
            "type": "string"
        },
        "dateModified": {
            "title": "Date Modified",
            "type": "string"
        },
        "datePublished": {
            "title": "Date Published",
            "type": "string"
        },
        "isBasedOn": {
            "type": "string",
            "default": ""
        },
        "requires": {
            "type": "object",
            "title": "Required Material for Measurement",
            "properties": {
                "type": "string",
                "title": "Material",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Material"
                            ]
                        }
                    }
                },
                "requiredQuantity": {
                    "$ref": "#/definitions/QuantitativeValue"
                }
            }
        },
        "size": {
            "type": "array",
            "title": "Structure Size",
            "items": {
                "title": "Size in This Dimension",
                "type": "object",
                "properties":{
                    "total_size": {
                      "type": "number",
                      "title": "Total Size in This Dimension"
                    },
                    "total_pixels": {
                      "type": "number",
                      "title": "Number of Pixels in This Dimension"
                    },
                    "unitText": {
                        "title": "Unit Text",
                        "type": "string"
                    },
                    "unitCode": {
                        "title": "Unit Code",
                        "type": "string",
                        "cordra": {
                            "type": {
                                "handleReference": {
                                    "types": [
                                        "UnitOfMeasurement"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "parameterControlled": {
            "type": "array",
            "title": "Parameters Controlled",
            "uniqueItems": true,
            "items": {
                "title": "Parameter Controlled",
                "$ref": "#/definitions/QuantitativeValue"
            }
        },
        "measurementTechnique": {
            "$ref": "#/definitions/measurementTechnique"
        },
        "tabularDataColumns":{
            "type": "array",
            "title": "Column Names and Units",
            "items": {
                "title": "Column Name and Units",
                "$ref": "#/definitions/DescriptiveValue"
            }
        }
    }
}
