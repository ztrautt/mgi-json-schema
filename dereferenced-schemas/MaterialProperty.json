            "type": "array",
            "title": "Materials",
            "description": "This field is for linking to any substance (e.g., sample, specimen, material, chemical, etc.), or a specific sup-sample (e.g., location on a larger artifact, sub-portion of a larger artifact, item within a collection of specimens, etc.).",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Material",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Material"
                            ]
                        }
                    }
                }
            }
        },
        "QuantitativeValue": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string",
                    "default": "QuantitativeValue"
                },
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "value": {
                    "title": "Value"
                },
                "unitText": {
                    "title": "Unit Text",
                    "type": "string"
                },
                "unitCode": {
                    "title": "Unit Code",
                    "type": "string",
                    "cordra": {
                        "type": {
                            "handleReference": {
