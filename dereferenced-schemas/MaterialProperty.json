            "items": {
                "type": "string",
                "title": "Referenced Item",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm",
                                "Instrument",
                                "SoftwareApplication",
                                "SoftwareSourceCode"
                            ]
                        }
                    }
                }
            }
        },
        "variableMeasured": {
