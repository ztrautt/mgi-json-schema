{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Organization",
    "description": "This schema is for describing an Organization in Cordra.",
    "required": [
        "@id",
        "@context",
        "@type"
    ],
    "properties": {
        "@context": {
            "type": "string",
            "default": "http://schema.org/"
        },
        "@type": {
            "type": "string",
            "default": "Organization"
        },
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "identifier": {
            "type": "array",
            "title": "Identifers",
            "items": {
                "type": "object",
                "title": "Identifer",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "PropertyValue"
                    },
                    "propertyID": {
                        "title": "Property IDs",
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "title": "Property ID",
                            "type": "string",
                            "cordra": {
                                "type": {
                                    "handleReference": {
                                        "types": [
                                            "DefinedTerm"
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "name": {
                        "title": "Identifier Type/Name",
                        "type": "string"
                    },
                    "value": {
                        "title": "Identifier Value"
                    },
                    "url": {
                        "title": "Identifier URL",
                        "type": "string"
                    }
                }
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateName": {
            "type": "string",
            "title": "Alternate Name",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "url": {
            "type": "string",
            "title": "URL"
        },
        "image": {
            "type": "array",
            "title": "Image URLs",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Image URL"
            }
        },
        "address": {
            "type": "string",
            "title": "Physical Address",
            "format": "textarea"
        },
        "contactPoint": {
            "type": "array",
            "title": "Contact Points",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Contact Point",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Person",
                                "User"
                            ]
                        }
                    }
                }
            }
        },
        "email": {
            "type": "string",
            "title": "E-Mail Address"
        },
        "telephone": {
            "type": "string",
            "title": "Telephone"
        },
        "subOrganization": {
            "type": "array",
            "title": "Child Organizations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Child Organization",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "parentOrganization": {
            "type": "array",
            "title": "Parent Organizations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Parent Organization",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        },
        "member": {
            "type": "array",
            "title": "Member Organizations/Persons",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Member Organization/Person",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization",
                                "User",
                                "Person"
                            ]
                        }
                    }
                }
            }
        },
        "memberOf": {
            "type": "array",
            "title": "Member of Organizations",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Member of Organization",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Organization"
                            ]
                        }
                    }
                }
            }
        }
    }
}