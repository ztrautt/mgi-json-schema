{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "DefinedTerm",
    "description": "This schema is for describing a Defined Term in Cordra.",
    "required": [
        "@id",
        "@context",
        "@type"
    ],
    "properties": {
        "@context": {
            "type": "array",
            "default": [
                "http://schema.org/",
                {
                    "mat": "https://pages.nist.gov/material-schema/",
                    "skos": "http://www.w3.org/2004/02/skos/core#",
                    "broader": "skos:broader",
                    "narrower": "skos:narrower",
                    "related": "skos:related",
                    "exactMatch": "skos:exactMatch",
                    "closeMatch": "skos:closeMatch"
                }
            ]
        },
        "@type": {
            "type": "array",
            "default": [
                "DefinedTerm",
                "mat:DefinedTerm"
            ]
        },
        "@id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "identifier": {
            "type": "array",
            "title": "Identifers",
            "items": {
                "type": "object",
                "title": "Identifer",
                "properties": {
                    "@type": {
                        "type": "string",
                        "default": "PropertyValue"
                    },
                    "propertyID": {
                        "title": "Property IDs",
                        "type": "array",
                        "uniqueItems": true,
                        "items": {
                            "title": "Property ID",
                            "type": "string",
                            "cordra": {
                                "type": {
                                    "handleReference": {
                                        "types": [
                                            "DefinedTerm"
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "name": {
                        "title": "Identifier Type/Name",
                        "type": "string"
                    },
                    "value": {
                        "title": "Identifier Value"
                    },
                    "url": {
                        "title": "Identifier URL",
                        "type": "string"
                    }
                }
            }
        },
        "name": {
            "type": "string",
            "title": "Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateName": {
            "type": "string",
            "title": "Alternate Name",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "description": {
            "type": "string",
            "title": "Description",
            "format": "textarea",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "url": {
            "type": "string",
            "title": "URL"
        },
        "image": {
            "type": "array",
            "title": "Image URLs",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Image URL"
            }
        },
        "subjectOf": {
            "type": "array",
            "title": "Subject Of",
            "description": "A CreativeWork about this Thing (e.g., Linked Materials, Datasets, etc.)",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Referenced Item",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": []
                        }
                    }
                }
            }
        },
        "termCode": {
            "type": "string",
            "title": "Term Code"
        },
        "inDefinedTermSet": {
            "type": "array",
            "title": "In Defined Term Sets",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "In Defined Term Set",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTermSet"
                            ]
                        }
                    }
                }
            }
        },
        "broader": {
            "type": "array",
            "title": "Broader Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Broader Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "narrower": {
            "type": "array",
            "title": "Narrower Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Narrower Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "related": {
            "type": "array",
            "title": "Related Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Related Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "exactMatch": {
            "type": "array",
            "title": "Exactly Matching Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Exactly Matching Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "closeMatch": {
            "type": "array",
            "title": "Closely Matching Terms",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Closely Matching Term",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "DefinedTerm"
                            ]
                        }
                    }
                }
            }
        },
        "isPartOf": {
            "type": "array",
            "title": "Is Part Of",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "Is Part Of",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": [
                                "Collection"
                            ]
                        }
                    }
                }
            }
        }
    }
}